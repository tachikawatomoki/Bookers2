<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-inverse">
    <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <span>Bookers</span>
    </nav>
    <nav>
      <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Home', user_path(current_user.id), class:"glyphicon glyphicon-home" %></li>
          <li><%= link_to 'Users',users_path,class:"glyphicon glyphicon-user" %></li>
          <li><%= link_to 'Books',books_path,class:"glyphicon glyphicon-book" %></li>
          <li><%= link_to 'Logout',destroy_user_session_path, method: :delete,class:"glyphicon glyphicon-log-out" %></li>
        </ul>
      <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Home',root_path,class:"glyphicon glyphicon-home" %></li>
            <li><%= link_to 'About',home_about_path,class:"glyphicon glyphicon-about" %></li>
            <li><%= link_to 'sign up',new_user_registration_path,class:"glyphicon glyphicon-sign up" %></li>
            <li><%= link_to 'login',new_user_session_path,class:"glyphicon glyphicon-login" %></li>
        </ul>
      <% end %>
    </nav>
    </div>
    </header>
    <%= render 'layouts/login' %>
    <%= yield %>
  </body>
</html>
