<body>


<div class="body" style="padding-top: 100px;">
	<div class="container">
		<div class="row">
			<%= render 'layouts/list', user: @user, book:@book%>

    

<div class="col-xs-9">
				<h3>Users</h3>
				<table class="table table-striped">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |user| %>
						<tr>
							<td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: 'image.jpg' %></td>
							<td><%= user.name %></td>
							<td><%=link_to "Show", user_path(user.id) %></td>
						</tr>
						<%end%>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
</body>