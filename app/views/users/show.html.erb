<div class="body" style="padding-top: 100px;">
	<div class="container">
		<div class="row">
			<%= render 'layouts/list', user: @user, book: @book %>


		    <div class="col-xs-9">
				<h3>Books</h3>
				<table class="table table-striped">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
						<% @books.each do |book| %>
						<tr>
							<td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: 'image.jpg' %></td>
							<td><%=link_to book.title, book_path(book.id)%></td>
							<td><%=book.body%></td>
						</tr>
                        <%end%>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

























