<body>

<div class="container">

        <p id="notice"></p>


      <div class="body" style="padding-top: 100px;">
	<div class="container">
		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>

<%= form_for(@user) do |f| %>
 
    <% if @user.errors.any? %>
        <div><%= @user.errors.count %>件のerrorが発生しました</div>
        <ul><% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
   		 </ul>
    <% end %>

    <label for="user_name">Name</label>
    <%= f.text_field :name %><br>
    <label for="user_image">Image</label>
    <%= f.attachment_field :profile_image %>
    <label for="user_introduction">Introduction</label>
    <%= f.text_area :introduction %>
    <%= f.submit %>
<% end %>
       
				
			</div>
		</div>
	</div>
</div>
</body>





